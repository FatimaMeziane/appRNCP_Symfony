{% extends "base.html.twig" %}


{% block title %}
	Recettes de la communauté
{% endblock %}

{% block body %}


	<div class="container mt-2">
		{% if not recipes.items is same as ([]) %}
			<h1>Recettes de la communauté</h1>
			<div class="d-flex justify-content-center flex-wrap">
				{% for recipe in recipes %}

					<div class="card text-white bg-primary mb-3 " style="max-width: 20rem;">
						<div class="card-header">Recette N</div>
						<div class="card-body">
							<h4 class="card-title">{{recipe.name}}</h4>
							<p class="card-text">{{recipe.description|slice(0.100) ~ '...'}}</p>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<h4>il n'ya pas de recette</h4>
			<div class="d-flex justify-content-center">
				<a href="{{ path('ajouteRecette')}}" class="btn btn-primary">Créer une recette</a>
			</div>

		{% endif %}
	</div>
{% endblock %}

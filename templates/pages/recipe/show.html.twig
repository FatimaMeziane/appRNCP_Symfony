{% extends "base.html.twig" %}
{% block title %}
	recettes -
	{{recipe.name}}
{%  endblock  %}
{% block body %}
	<div class="container">
		<h1 class='mt-4'>
			{{recipe.name}}</h1>
            <p>La moyenne de cette recette est de {{ recipe.average }}/5 </p>
                {# {{ dump(recipe.average) }} #}
           
		<div>
			<span class="badge bg-primary">
				Créée le
				{{recipe.creatAt|date('d/m/y')}}</span>
		</div>
		<div class="mt-4">
			{% if recipe.time %}
				<p>Temps ( en minute ) :
					{{recipe.time}}
				</p>
			{% else %}
				<p>Temps non renseigné</p>
			{% endif %}
		</div>
		<div class="mt-4">
			{% if recipe.nbPeople %}
				<p>
					Pour
					{{recipe.nbPeople}}
					personnes
				</p>
			{% else %}
				<p>Nombre de personne non renseigné</p>
			{% endif %}
		</div>
		<div class="mt-4">
			{% if recipe.Difficulty %}
				<p>
					Difficulté :
					{{recipe.Difficulty}}/5
				</p>
			{% else %}
				<p>Difficulté non renseigné</p>
			{% endif %}
		</div>
		<div class="mt-4">
			{% if recipe.price %}
				<p>
					Prix ( en Euro) :
					{{recipe.price}}
					euros
				</p>
			{% else %}
				<p>Prix non renseigné</p>
			{% endif %}
		</div>


		<div>
			{{recipe.description|raw}}
		</div>
        <div class="mt-4">
            <p class='mt-4'> Ingrédients</p>
            {% for ingredient in recipe.ingredients %}
            <span class="badge bg-primary">{{ ingredient.name }}</span>
            {% endfor %}
        </div>
	</div>
{% endblock %}

{% extends 'base.html.twig' %}
{% block title %}RecetteClub
{% endblock %}

{% block body %}
	<div class="formLogin mx-auto my-5">
		<h1 class="mt-4">Nous sommes heureux de vous revoir !</h1>
		{#  j'informe l'utilisateur que son compte a été créé avec succès.#}
		{% for message in app.flashes('success') %}
			<div class=" alert alert-success mt-3">
				{{ message }}
			</div>
		{% endfor %}

		<form action="{{ path('security.login') }}" method="post">

			<div class="form-group">
				<label for="username" class="form-label mt-4">Adresse email</label>
				<input type="email" class="form-control" id="username" placeholder="exemple@recettes.fr" required name="_username">

			</div>
			<div class="form-group">
				<label for="password" class="form-label mt-4">Mot de passe</label>
				<input type="password" class="form-control" id="password" required placeholder="********" name="_password">
			</div>

			<button class="btn btn-warning mt-4" type='submit'>Me connecter
			</button>
		</form>
	</div>
{% endblock %}
